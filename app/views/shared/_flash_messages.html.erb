<% flash.each do |name, msg| %>
  <% if name == ("notice" || "info") %>
    <div class="alert alert-info" role="alert" id="alert">
      <a href="#" class="close" data-dismiss="alert">×</a>
      <%= msg %>
    </div>
  <% else %>
    <div class="alert alert-danger" role="alert" id="alert">
      <a href="#" class="close" data-dismiss="alert">×</a>
      <%= name + msg %>
    </div>
  <% end %>
<% end %>
